<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mariozorz.myapplication.ChooserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your own adventure:"/>

    <Button
        android:id="@+id/native_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Native Activity"/>

    <Button
        android:id="@+id/react_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to React Native Activity"/>

</LinearLayout>
